<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_margin="50dp"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/home01_bg_card">

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/portrait"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="12dp" >

        <TextView
            android:id="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#565656"
            android:textSize="20sp"
            android:text="请叫我万能小黑"/>

        <ImageView
            android:id="@+id/onlineState"
            android:layout_toRightOf="@id/name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/online"
            />


        <TextView
            android:id="@+id/yearOld"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#565656"
            android:textSize="14sp"
            android:singleLine="true"
            android:text=""/>
        <TextView
            android:id="@+id/city"
            android:layout_alignTop="@id/yearOld"
            android:layout_toLeftOf="@id/yearOld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#565656"
            android:textSize="14sp"
            android:singleLine="true"
            android:text=""/>
        <TextView
            android:id="@+id/hobby"
            android:layout_alignTop="@id/yearOld"
            android:layout_toRightOf="@id/yearOld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#565656"
            android:textSize="14sp"
            android:singleLine="true"
            android:text=""/>

        <TextView
            android:id="@+id/oneShort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/yearOld"
            android:layout_marginTop="8dp"
            android:text="凡心所向，素履所往！"
            />

        <CheckedTextView
            android:id="@+id/favorite"
            android:layout_below="@id/oneShort"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/home01_btn_collect"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text=""/>
    </RelativeLayout>

</LinearLayout>
