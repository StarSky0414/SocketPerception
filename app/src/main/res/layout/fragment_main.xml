<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fr_main"
    app:layout_behavior="eu.long1.spacetablayout.SpaceTabLayoutBehavior"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp" />

    <eu.long1.spacetablayout.SpaceTabLayout
        android:id="@+id/spaceTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_behavior="eu.long1.spacetablayout.SpaceTabLayoutBehavior"
        app:number_of_tabs="four"
        app:icon_one="@drawable/find"
        app:icon_two="@drawable/square"
        app:icon_three="@drawable/trends"
        app:icon_four="@drawable/my"
        app:tab_color="#76aaf4"
        app:button_color="#76ccf4"
        app:text_color="#61FFFFFF"
        app:starting_position="one" />

</android.support.constraint.ConstraintLayout>