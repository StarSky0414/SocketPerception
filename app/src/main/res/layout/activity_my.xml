<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d7d7d7"
    >


    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/timg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="我的"
            android:textColor="#000000"
            android:textSize="21sp" />

        <Button
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/setting" />

        <Button
            android:id="@+id/bt_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/starsky" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/bt_portrait"
            android:text="星空"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_name"
            android:background="@drawable/boy" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#fff">

                <ImageView
                    android:id="@+id/iv_bottle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bottle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_bottle"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:textColor="#000"
                    android:text="漂流瓶" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#fff">

                <ImageView
                    android:id="@+id/iv_position"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/position" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_position"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"

                    android:text="附近的人" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#fff">

                <ImageView
                    android:id="@+id/iv_about"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/about" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_about"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:text="关于软件" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginTop="3dp">

            <RelativeLayout
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_weight="1"
                android:background="#fff">

                <ImageView
                    android:id="@+id/iv_version"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/version" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_version"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"

                    android:text="软件版本" />

            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:id="@+id/rl_my_trends"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="#fff">

                <ImageView
                    android:id="@+id/iv_development"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/development"
                    android:focusable="false"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_development"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:focusable="false"
                    android:text="我的动态" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="#fff">

                <ImageView
                    android:id="@+id/iv_keep"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keep" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_keep"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:text="我的收藏" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>